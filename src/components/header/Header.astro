---
import NavMenu from './NavMenu'
const links = [
	{ linkText: 'Projects', link: '/#projects' },
	{ linkText: 'Resume', link: '/resume' }
]

interface Props {
	className?: string
}
const { className } = Astro.props
---

<header class={(className ? className : '') + ' p-5 relative '}>
	<div class="mx-auto flex max-w-screen-xl items-center justify-between">
		<a href="/" class="text-2xl font-bold"> Clayton Schneider</a>

		<NavMenu links={links} client:load />
	</div>
</header>
