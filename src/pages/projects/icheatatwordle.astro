---
import { Icon } from 'astro-icon'
import { Image } from 'astro:assets'
import CoreLayout from 'src/layouts/CoreLayout.astro'
---

<CoreLayout
	seo={{
		title: 'I Cheat At Wordle Project Review | Clayton Schneider',
		description:
			'I Cheat At Wordle is a companion tool that works to help you find remaining moves while playing Wordle.'
	}}
>
	<section class="px-4 pt-32">
		<div class="mx-auto max-w-2xl">
			<nav class="flex" aria-label="Breadcrumb">
				<ol role="list" class="flex items-center space-x-4">
					<li>
						<div>
							<a href="/" class="text-gray-400 hover:text-gray-500">
								<svg
									class="h-5 w-5 flex-shrink-0"
									viewBox="0 0 20 20"
									fill="currentColor"
									aria-hidden="true"
								>
									<path
										fill-rule="evenodd"
										d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 11h-1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H9a1 1 0 00-1 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-6H3a1 1 0 01-.707-1.707l7-7z"
										clip-rule="evenodd"></path>
								</svg>
								<span class="sr-only">Home</span>
							</a>
						</div>
					</li>
					<li>
						<div class="flex items-center">
							<svg
								class="h-5 w-5 flex-shrink-0 text-gray-400"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
									clip-rule="evenodd"></path>
							</svg>
							<a href="#" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700"
								>Projects</a
							>
						</div>
					</li>
					<li>
						<div class="flex items-center">
							<svg
								class="h-5 w-5 flex-shrink-0 text-gray-400"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
									clip-rule="evenodd"></path>
							</svg>
							<a
								href="#"
								class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700"
								aria-current="page">I Cheat At Wordle</a
							>
						</div>
					</li>
				</ol>
			</nav>
		</div>
	</section>

	<section class="my-10 px-4">
		<div class="mx-auto max-w-2xl">
			<Image
				transition:name="project-img"
				class="w-full object-cover"
				src={import('~/imgs/projects/icheatatwordle/i-cheat-at-wordle.png')}
				alt="i cheat at wordle"
			/>
			<h3 class="mt-5 text-3xl font-bold" transition:name="project-name">I Cheat At Wordle</h3>
			<p class="mt-2">
				This tool will filter through all the five letter words in the English language and show you
				your remaining guesses so that you can win Wordle faster.
			</p>

			<div class="mt-5">
				<ul class="flex space-x-4">
					<li>
						<a class="flex items-center space-x-1" href="https://icheatatwordle.com" target="_blank"
							><Icon name="gg:external" size={30} /><span>Live Demo</span></a
						>
					</li>
					<li>
						<a
							class="flex items-center space-x-1"
							href="https://github.com/clayton-schneider/icheatatwordle"
							target="_blank"><Icon name="mdi:github" size={30} /><span>Source Code</span></a
						>
					</li>
				</ul>
			</div>
		</div>
	</section>
</CoreLayout>
