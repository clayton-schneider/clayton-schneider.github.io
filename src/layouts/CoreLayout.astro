---
import { ViewTransitions } from 'astro:transitions'
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer'
import { SEO } from 'astro-seo'
import type { Props as PSEO } from 'astro-seo'
import Footer from '~/components/Footer.astro'

interface Props {
	seo?: PSEO
}

const { seo } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png+xml" href="/favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="viewport" content="width=device-width" />
		<GoogleFontsOptimizer
			url="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
		/>
		<ViewTransitions />
		<SEO {...seo} />
	</head>
	<body class="relative w-full overflow-x-hidden dark:bg-neutral-900 dark:text-white/90">
		<slot />

		<section class="mx-auto my-32 max-w-2xl px-4">
			<Footer />
		</section>
	</body>
</html>
